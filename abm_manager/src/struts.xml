<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.multipart.maxSize" value="100000000"/> 
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="false" />
	<constant name="struts.i18n.encoding" value="utf-8"/>
	
	<package namespace="/" name="/" extends="struts-default">
		<action name="*-*" class="com.abm.manager.action.{1}Action" method="{2}"/>
	</package>
	<package namespace="/act" name="/act" extends="struts-default">
		<action name="*-*" class="com.abm.common.act.action.{1}Action" method="{2}"/>
	</package>
</struts>    
